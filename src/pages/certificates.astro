---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Pan from "../assets/certificates/pan.jpg";
import Form10 from "../assets/certificates/form10ac.jpg";
import Form10AC from "../assets/certificates/form10ac.jpg";
import CSR from "../assets/certificates/csr.jpg";
import Udyam from "../assets/certificates/udyam.jpg";
import ScannedCopy from "../assets/certificates/scanned-copy.jpg";
import Header from "../layouts/Header.astro";
---

<Header route='certificates'>
  <div class='cert-con'>
    <div class='images-section'><Image src={Pan} alt='' /></div>
    <div class='images-section'><Image src={Form10} alt='' /></div>
    <div class='images-section'><Image src={Form10AC} alt='' /></div>
    <div class='images-section'><Image src={CSR} alt='' /></div>
    <div class='images-section'><Image src={Udyam} alt='' /></div>
    <div class='images-section'><Image src={ScannedCopy} alt='' /></div>
  </div>
</Header>

<style>
  .cert-con {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    padding: 5rem 2rem;
  }

  .image-section {
    display: flex;
    gap: 3rem;
    flex-direction: column;
    height: 100%;
    width: 100%;
  }

  /* Add the following CSS to make the images responsive */
  .images-section img {
    max-width: 100%; /* This will make sure the image is not wider than its container */
    height: auto; /* This will maintain the aspect ratio of the image */
    object-fit: contain; /* This will make sure the image scales nicely */
  }
</style>
